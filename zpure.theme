function pure_dir() {
    colorize "%~" blue false
}

function on_branch() {
    if [[ -z "$(async_git_branch)" ]]
    then
        return
    fi

    branch=$(git symbolic-ref -q HEAD || git name-rev --name-only --no-undefined --always HEAD)  2> /dev/null
    if [[ -n $branch ]]; then
        git_where="${branch/(refs\/heads|tags)\//}"
    fi

    if [[ $(git status -s) ]]; then
        git_where="${git_where}*"
    fi

    colorize "${git_where}" 240 false
}

function newline_prompt_arrow() {
    echo
    prompt_arrow
}

function async_git_position_with_fetch() {
    if [[ -z "$(async_git_branch)" ]]
    then
        return
    fi

    git fetch &>/dev/null
    async_git_position
}

PROMPT_LEFT_ELEMENTS=(pure_dir on_branch async_git_position_with_fetch last_command_elapsed_seconds newline_prompt_arrow)
PROMPT_RIGHT_ELEMENTS=()
ZPURE_GIT_AHEAD="⇡"
ZPURE_GIT_BEHIND="⇣"
ZPURE_ARROW_OK_COLOR="162"
ZPURE_ARROW_OK_CHAR_BOLD=false
ZPURE_ARROW_KO_COLOR="red"
ZPURE_ARROW_KO_CHAR_BOLD=false
